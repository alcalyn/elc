{% extends "ELCoreBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{ game.title }} - {{ 'scores'|trans }}{% endblock %}

{% block body %}
<div class="jeux-termine">
    <h1>{{ game.title }} - {{ 'scores'|trans }}</h1>
    <table class="table">
    	<thead>
    		<tr>
    			<th>#</th>
    			<th>{{ 'player'|trans }}</th>
    			<th>{{ 'score'|trans }}</th>
    		</tr>
    	</thead>
    	<tbody>
			{% for slot in party.slots %}
	    		<tr>
	    			<td>{{ slot.position }}</td>
		    		<td>
						{% if slot.player %}
							{{ slot.player.pseudo }}
						{% else %}
							No player
						{% endif %}
					</td>
					<td>{{ slot.score }}</td>
				</tr>
			{% endfor %}
    	</tbody>
	</table>
	<form action="{{ path('elcore_party_preparation_action', { 'slug_game': game.slug, 'slug_party': party.slug }) }}" method="post">
		<button type="submit" name="action" value="remake" class="btn btn-primary">{{ 'remake'|trans }}</button>
	</form>
</div>
{% endblock %}
