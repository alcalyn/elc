{% extends "ELCoreBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'games'|trans }}{% endblock %}

{% block body %}
<h2>{{ 'login'|trans }}</h2>
{% if error %}
    <div class="alert alert-error">{{ error.message }}</div>
{% endif %}

{# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
<form action="{{ path('login_check') }}" method="post" role="form">
    <div class="form-group">
        <label>
            {{ 'pseudo'|trans }}
            <input type="text" name="player_pseudo" value="{{ last_username }}" placeholder="{{ 'pseudo'|trans }}" class="form-control" />
        </label>
    </div>
    <div class="form-group">
        <label>
            {{ 'password'|trans }}
            <input type="password" name="player_password" placeholder="{{ 'password'|trans }}" class="form-control" />
        </label>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="remember" />
            {{ 'rememberme.onthiscomputer'|trans }}
        </label>
    </div>
    <button type="submit" class="btn btn-default">{{ 'login'|trans }}</button>
</form>
{% endblock %}
