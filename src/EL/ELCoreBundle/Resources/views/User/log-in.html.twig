{% extends "ELCoreBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {% trans %}Games{% endtrans %}{% endblock %}

{% block body %}
<h2>{{ 'Log in'|trans }}</h2>
{% for error in errors %}
    {{error}}<br />
{% endfor %}
<form method="post" role="form">
    <div class="form-group">
        <label>
            {{ 'Pseudo'|trans }}
            <input type="text" name="player_pseudo" class="form-control" placeholder="{{ 'Pseudo'|trans }}" />
        </label>
    </div>
    <div class="form-group">
        <label>
            {{ 'Password'|trans }}
            <input type="password" name="player_password" class="form-control" placeholder="{{ 'Password'|trans }}" />
        </label>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="remember" />
            {{ 'Remember me on this computer'|trans }}
        </label>
    </div>
    <button type="submit" class="btn btn-default">{{ 'Log in'|trans }}</button>
</form>
{% endblock %}
