{% extends "CoreBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Active{% endblock %}

{% block htmlhead %}
    {% stylesheets
        '@TicTacToeBundle/Resources/public/css/*'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
<div class="jeux-actif">
    <div id="grid">
    	{% for line in 0..2 %}
    		{% for col in 0..2 %}
		    	<div id="grid-{{ line }}-{{ col }}" class="grid-item grid-{{ cycle(['odd', 'even'], (line+col)) }} grid-value_{{ extendedParty.grid[line*3+col : 1] }}"></div>
    		{% endfor %}
    	{% endfor %}
    	<div style="clear:both"></div>
    </div>
    <div id="players">
    	<div class="player player-1">
    		<h3>
    			{% if party.slots[0].player %}
    				{{ party.slots[0].player.pseudo }}
    			{% else %}
    				---
    			{% endif %}
    		</h3>
    		<p>{{ party.slots[0].score }} {{ 'wins'|trans }}</p>
    	</div>
    	<div class="player player-2">
    		<h3>
    			{% if party.slots[1].player %}
    				{{ party.slots[1].player.pseudo }}
    			{% else %}
    				---
    			{% endif %}
    		</h3>
    		<p>{{ party.slots[1].score }} {{ 'wins'|trans }}</p>
    	</div>
    </div>
</div>
{% endblock %}

{% block htmlend %}
    {% javascripts
        '@TicTacToeBundle/Resources/public/js/*'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
